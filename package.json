    "@bugsnag/plugin-react": "^5.2.0",
    "@svgr/webpack": "4.1.0",
    "@types/classnames": "^2.2.7",
    "@types/jest": "24.0.3",
    "@types/lodash": "^4.14.120",
    "@types/node": "11.9.3",
    "@types/react": "16.8.2",
    "@types/react-dom": "16.8.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.1.0",
    "babel-loader": "8.0.5",
    "babel-plugin-named-asset-import": "^0.3.0",
    "babel-preset-react-app": "^7.0.0",
    "bfj": "6.1.1",
    "case-sensitive-paths-webpack-plugin": "2.2.0",
    "chalk": "2.4.2",
    "classnames": "^2.2.6",
    "css-loader": "2.1.0",
    "dotenv": "6.2.0",
    "dotenv-expand": "4.2.0",
    "dotenv-webpack": "^1.7.0",
    "eslint": "5.13.0",
    "eslint-config-react-app": "^3.0.6",
    "eslint-loader": "2.1.2",
    "eslint-plugin-flowtype": "3.4.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.12.4",
    "file-loader": "3.0.1",
    "fork-ts-checker-webpack-plugin-alt": "0.4.14",
    "fs-extra": "7.0.1",
    "html-webpack-plugin": "4.0.0-alpha.2",
    "identity-obj-proxy": "3.0.0",
    "jest": "24.1.0",
    "jest-pnp-resolver": "1.1.0",
    "jest-resolve": "24.1.0",
    "mini-css-extract-plugin": "0.5.0",
    "node-sass": "^4.11.0",
    "optimize-css-assets-webpack-plugin": "5.0.1",
    "pnp-webpack-plugin": "1.2.1",
    "postcss-flexbugs-fixes": "4.1.0",
    "postcss-loader": "3.0.0",
    "postcss-preset-env": "6.5.0",
    "postcss-safe-parser": "4.0.1",
    "react": "^16.7.0",
    "react-app-polyfill": "^0.2.0",
    "react-dev-utils": "^7.0.1",
    "react-dom": "^16.7.0",
    "resolve": "1.10.0",
    "sass-loader": "7.1.0",
    "style-loader": "0.23.1",
    "terser-webpack-plugin": "1.2.2",
    "typescript": "3.3.3",
    "url-loader": "1.1.2",
    "webpack": "4.29.3",
    "webpack-bugsnag-plugins": "^1.3.0",
    "webpack-dev-server": "3.1.14",
    "webpack-manifest-plugin": "2.0.4",
    "workbox-webpack-plugin": "3.6.3"
  },
  "scripts": {
    "start": "node scripts/start.js",
    "build": "node scripts/build.js",
    "test": "yarn test-unwatch --watchAll",
    "test-unwatch": "env-cmd .env jest --forceExit --detectOpenHandles",
    "patch": "ls node_modules_patch/ | awk '{system(\"cp -rp node_modules_patch/\"$1\" node_modules\")}'",
    "snyk": "snyk test",
    "coverage": "rm -rf coverage && yarn test-unwatch --coverage",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "tslint": "tslint -p tsconfig.json",
    "stylelint": "stylelint 'src/**/*.scss'",
    "lint-staged": "lint-staged",
    "pre-commit": "yarn lint-staged && yarn test-unwatch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint",
      "git add"
    ],
    "*.scss": [
      "stylelint",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/Utils.tsx",
      "!src/App.tsx",
      "!src/index.tsx",
      "!src/Beat/Status.ts",
      "!src/serviceWorker.ts",
      "!**/*.d.ts"
    ],
    "resolver": "jest-pnp-resolver",
    "setupFiles": [
      "react-app-polyfill/jsdom"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "testMatch": [
      "<rootDir>/__tests__/**/*.test.(j|t)s?(x)"
    ],
    "testEnvironment": "jsdom",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|ts|tsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^Beat/(.+)": "<rootDir>/src/Beat/$1",
      "^react-native$": "react-native-web",
      "^__tests__/(.+)": "<rootDir>/__tests__/$1",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "react-app"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^4.1.11",
    "@storybook/addon-info": "^4.1.11",
    "@storybook/addon-knobs": "^4.1.11",
    "@storybook/addon-links": "^4.1.11",
    "@storybook/addon-notes": "^4.1.11",
    "@storybook/addon-options": "^4.1.11",
    "@storybook/addon-viewport": "^4.1.11",
    "@storybook/addons": "^4.1.11",
    "@storybook/react": "^4.1.11",
    "@types/enzyme": "^3.1.16",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/sinon": "^7.0.5",
    "@types/storybook__addon-knobs": "^4.0.0",
    "@types/storybook__addon-notes": "^4.0.1",
    "@types/storybook__react": "^4.0.0",
    "env-cmd": "^8.0.2",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.8.0",
    "enzyme-to-json": "^3.3.5",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "qrcode": "^1.3.3",
    "sinon": "^7.2.3",
    "stylelint": "^9.10.1",
    "stylelint-config-standard": "^18.2.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0"
  }
}
